<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/marginNormal"
        android:paddingRight="@dimen/marginNormal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/open_session_button"
            android:text="@string/open_session"
            android:layout_width="match_parent"
            android:minHeight="@dimen/imageSize"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/recognize_file_button"
            android:text="@string/recognize_file"
            android:layout_width="match_parent"
            android:minHeight="@dimen/imageSize"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginHalf"/>

        <Button
            android:id="@+id/recognize_stream_button"
            android:text="@string/recognize_stream"
            android:layout_width="match_parent"
            android:minHeight="@dimen/imageSize"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginHalf"/>

        <TextView
            android:id="@+id/session_id_header"
            android:text="@string/session_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginNormal"/>

        <TextView
            android:id="@+id/session_id_value"
            tools:text="7c11782d-552b-4953-a750-c48bef5d6b2e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginHalf"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>
</FrameLayout>